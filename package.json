{
  "name": "hono-open-api-starter-mysql",
  "type": "module",
  "version": "1.0.0",
  "description": "A template project for building Hono APIs with OpenAPI and MySQL using Drizzle ORM.",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "db:push": "pnpm drizzle-kit push",
    "db:generate": "pnpm drizzle-kit generate",
    "db:studio": "pnpm drizzle-kit studio",
    "test": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/zod-openapi": "^1.2.0",
    "@scalar/hono-api-reference": "^0.9.30",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.1",
    "hono-pino": "^0.10.3",
    "mysql2": "^3.16.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "stoker": "^2.0.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.16"
  }
}
